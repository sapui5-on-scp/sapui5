<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core">
	<ResponsivePopover placement="Bottom" showHeader="false">
		<f:ProductSwitch change="fnChange" items="{ path: '/items' }">
			<f:items>
				<f:ProductSwitchItem src="{src}" title="{title}" subTitle="{subTitle}" target="{target}"/>
			</f:items>
		</f:ProductSwitch>
		<endButton>
			<Button text="Close" type="Emphasized" press="fnClose"/>
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>